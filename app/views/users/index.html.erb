<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'templates/user_info', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
         <tr>
          <th>プロフ画像</th>
          <th>名前</th>
          <th>自己紹介</th>
          <th></th>
          <th colspan="3"></th>
    　    </tr>
        </thead>
        <tbody>
          <tr>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user,:profile_image, :fill, 63, 63, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= user.introduction %></td>
              <td><% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
              <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
              <% end %>
              </td>
              <td><td><%= link_to "詳細", user_path(user.id) %></td>
            </tr>
          <% end %>
          </tr>
        </tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>