<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'templates/user_info', user: @user %>
    </div>





<div class="col-md-8 offset-md-1">
      <h2>Comics</h2>
      <table class="table table-hover table-inverse">
        <thead>
         <tr>
          <th></th>
          <th>タイトル</th>
          <th>説明</th>
          <th colspan="3"></th>
    　    </tr>
        </thead>
        <tbody>
            <tr><% @comics.each do |comic| %></tr>
          <tr>
            <td>
              <%= link_to user_path(comic.user) do %>
                <%= attachment_image_tag comic.user,:profile_image, :fill, 63, 63, format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td>
              <%= link_to comic.title, comic_path(comic.id) %>
            </td>
            <td><%= comic.body %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>