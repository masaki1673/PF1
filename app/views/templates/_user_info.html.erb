<div>
  <h2>プロフィール</h2>
  <table class='table'>
    <tr>
      <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></tr>
    <tr>
  	  <th>名前</th>
  	  <th><%= current_user.name %></th>
    </tr>
    <tr>
  	  <th>紹介</th>
  	  <th><%= current_user.introduction %></th>
	  </tr>
  </table>
  <div class='row'>
    <%= link_to '', edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
  </div>
</div>