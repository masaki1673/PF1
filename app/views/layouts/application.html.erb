<!DOCTYPE html>
<html>
  <head>
    <title>Comics Diary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
   <header>
     <nav class="navbar navbar-dark bg-primary">
       <div class="container">
         <a class="navbar-brand" href="/"><span>Comics <i class="fas fa-hands-helping"></i> Diary</span></a>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
             <% if user_signed_in? %>
               <%= link_to "Home", user_path(current_user.id), class: "fas fa-home nav-link text-light" %>
               <%= link_to "ユーザー一覧", users_path, class: "fas fa-users nav-link text-light"  %>
               <%= link_to "マンガ一覧", comics_path, class: "fas fa-book-open nav-link text-light"  %>
               <%= link_to '新規投稿', new_comic_path, class: "fas fa-quran nav-link text-light"  %>
               <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt nav-link text-light" %>
             <% else %>
               <%= link_to "Home", root_path, class: "fas fa-home nav-link text-light" %>
               <%= link_to "About", home_about_path, class: "fas fa-link nav-link text-light" %>
               <%= link_to "新規登録", new_user_registration_path, class: "fas fa-user-plus nav-link text-light" %>
               <%= link_to "ログイン", new_user_session_path, class: "fas fa-sign-in-alt nav-link text-light"  %>
             <% end %>
           </ul>
         </div>
       </div>
     </nav>
   </header>
   <main>
    <%= yield %>
   </main>
  </body>
</html>
