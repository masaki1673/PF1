<div class="container">
   <div class="row">
     <div class='mx-auto col-12'>
        <h1 class="px-3 mx-auto">新規登録</h1>
          <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <table class="table table-hover table-inverse">
           <tbody>
            <tr>
            <td><%= f.label :お名前 %></td>
            <td><%= f.text_field :name, autofocus: true %></td>
            </tr>

            <tr>
            <td><%= f.label :メール %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>

            <tr>
            <td><%= f.label :パスワード %> (<%= @minimum_password_length %> 文字以上)</td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>

            <tr>
            <td><%= f.label :パスワード（確認用） %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <p></p>
            <tr>
            <td><%= f.submit "新規登録", class: "btn btn-sm btn-success" %></td>
            <% end %>
            </tr>
           </tbody>
          </table>

          <p></p>
          <h4>既に登録済みの方</h4>
          <p></p>
          <h6>
         <%= link_to "こちら", new_user_session_path %>からログインしてください
          </h6>
      </div>
    </div>
</div>
