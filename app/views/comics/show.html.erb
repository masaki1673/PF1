
<div class="container">
  <h2 class="my-3 ml-3">
    マンガの詳細
  </h2>
  <div class="row">
    <div class="col-sm-10 mx-auto">
      <%= attachment_image_tag @comic, :image, format: 'jpeg', size: "300x300" %>
      <p>タイトル: <%= @comic.title %></p>
      <p>説明：<%= @comic.body %></p>
      <p>ユーザー名：<%= @comic.user.name %></p>
      <p>コメント件数：<%= @comic.post_comments.count %></p>
      <div class="new-comment">
        <%= render 'post_comments/form', comic: @comic, comment: @post_comment %>
      </div>
      <div id="comments_area">
        <%= render 'post_comments/post_comments', comic: @comic %>
      </div>

      <%= link_to 'Edit', edit_comic_path(@comic) %> |
      <%= link_to 'Back', comics_path %>
    </div>
  </div>
</div>